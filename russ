        // 1. –Å–õ–ö–ê (h, r=1, c=5‚Äì9)
        const word1 = "–Å–õ–ö–ê";
        for (let i = 0; i < word1.length; i++) grid[1][5 + i] = word1[i];
        grid[1][5] = {letter: '–Å', num: 1};

        // 2. –û–õ–ò–í–¨–ï (h, r=3, c=2‚Äì8)
        const word2 = "–û–õ–ò–í–¨–ï";
        for (let i = 0; i < word2.length; i++) grid[3][2 + i] = word2[i];
