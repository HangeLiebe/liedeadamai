        });

        // 4. –ö–£–†–ê–ù–¢–´ (7) ‚Äî v, c=5, r=3‚Äì9: –ö(3),–£(4),–†(5),–ê(6),–ù(7),–¢(8),–´(9)
        "–ö–£–†–ê–ù–¢–´".split('').forEach((ch, i) => {
            if (i === 0) {
                // r=3,c=5 ‚Äî —Ç–∞–º —É–∂–µ '–í' –∏–∑ "–û–õ–ò–í–¨–ï" (c=5 ‚Üí 3-–π –∏–Ω–¥–µ–∫—Å –≤ "–û–õ–ò–í–¨–ï": –û(2),–õ(3),–ò(4),–í(5) ‚Äî –¥–∞, r=3,c=5 = '–í')
